@using SbtMultiDB

@{
    var currentOrganization = TempData.CurrentOrganization();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@TempData.Title() - SoftballTech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SbtMultiDB.styles.css" asp-append-version="true" />
</head>
<body style="padding-top: 65px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style="color: silver; background-color:blue">Softball</span><span style="color: gold; background-color:blue">Tech</span>-Multi-Database
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="StandingsList" asp-action="Index" asp-route-organization="Demo Softball">Demo Softball</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="StandingsList" asp-action="Index" asp-route-organization="Demo Hockey">Demo Hockey</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index" asp-route-organization="@currentOrganization">Admin</a>
                        </li>
                        @await Html.PartialAsync("_DatabaseMenu")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="grid-container">
            <div class="grid-item">
                &copy; @DateTime.Now.Year - SoftballTech
            </div>
            <div class="grid-item version-container">
                <span class="version">Version 0.5</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_DatabaseMenuScripts")

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
